{% extends 'base.html.twig' %}

{% block body %}
    <h1>Forums list</h1>

    <table>
        <thead>
            <tr>
                <th>Idarticle</th>
                <th>Iduser</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum in forums %}
            <tr>
                <td><a href="{{ path('forum_show', { 'idArticle': forum.idArticle }) }}">{{ forum.idArticle }}</a></td>
                <td>{{ forum.idUser }}</td>
                <td>{{ forum.titre }}</td>
                <td>{{ forum.image }}</td>
                <td>{{ forum.description }}</td>
                <td>{{ forum.date }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('forum_show', { 'idArticle': forum.idArticle }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('forum_edit', { 'idArticle': forum.idArticle }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('forum_new') }}">Create a new forum</a>
        </li>
    </ul>
{% endblock %}
