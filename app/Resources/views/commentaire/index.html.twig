{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaires list</h1>

    <table>
        <thead>
            <tr>
                <th>Idcomm</th>
                <th>Idarticle</th>
                <th>Iduser</th>
                <th>Text</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td><a href="{{ path('commentaire_show', { 'idComm': commentaire.idComm }) }}">{{ commentaire.idComm }}</a></td>
                <td>{{ commentaire.idArticle }}</td>
                <td>{{ commentaire.idUser }}</td>
                <td>{{ commentaire.text }}</td>
                <td>{{ commentaire.date }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commentaire_show', { 'idComm': commentaire.idComm }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commentaire_edit', { 'idComm': commentaire.idComm }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commentaire_new') }}">Create a new commentaire</a>
        </li>
    </ul>
{% endblock %}
