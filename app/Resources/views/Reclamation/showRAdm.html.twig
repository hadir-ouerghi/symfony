{% extends 'baseback.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('jQuery/datatables.bundle.css') }}" rel="stylesheet"
          type="text/css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>



{% endblock %}
{% block content %}

    <script src="{{ asset ('jquery/jquery-3.3.1.js') }}"></script>
    <section id="intro1" class="clearfix">
    </section>
    <div style="padding-left: 450px">
        <span class="glyphicon glyphicon-warning-sign" style="color: black">
        <p style="color: red"> <b>LES PLUS URGENTES</b></p></span>
        <span class="glyphicon glyphicon-warning-sign" style="color: red"></span>

    </div>
    <div class="kt-portlet__body">
        <table class="table table-striped table-bordered" id="kt_table_2" >
            <thead>
            <tr>
                <th scope="id" style="display: none;">id</th>
                <th scope="contenu">contenu</th>
                <th scope="etat">etat</th>
                <th scope="type">type</th>
                <th scope="reponse">reponse</th>
                <th scope="reponse">date</th>

            </tr>
            </thead>
            <tbody >
            {% for post in posts %}

                <tr class="table-active"   >
                    <td style="display: none;">{{ post.id }}</td>
                    <td>{{ post.contenu  |raw}}</td>
                    <td>{{ post.etat }}</td>
                    <td>{{ post.type }}</td>
                    <td>{{ post.reponse }}</td>
                    <td>{{ post.date }}</td>
                </tr>

            {% else %}
                <tr>
                    <td>Pas de reclamations urgentes :) </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>






    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('jQuery/datatables.bundle.js') }}"
            type="text/javascript"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>



    <script>
        $(document).ready(function () {
            $('#kt_table_2').DataTable();
        });
    </script>
{% endblock %}

